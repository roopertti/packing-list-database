{
  "compilerOptions": {
    "lib": ["ES2015"],
    "module": "CommonJS",
    "outDir": "./dist",
    "target": "ES2017",
    "baseUrl": ".",
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "extends": "tsconfig/base.json",
  "include": ["**/*.ts"],
  "exclude": ["node_modules"],
  "ts-node": {
    "require": ["tsconfig-paths/register"]
  }
}
